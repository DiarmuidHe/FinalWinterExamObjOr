<Window x:Class="WinterExamFinalObjOr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinterExamFinalObjOr"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxEvents" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="45,96,427,95"/>
        <ListBox x:Name="lbxTickets" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,96,26,95"/>
        <Label Content="Events" HorizontalAlignment="Left" Margin="45,65,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxSearch" HorizontalAlignment="Left" Margin="161,69,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Label Content="Tickets" HorizontalAlignment="Left" Margin="458,65,0,0" VerticalAlignment="Top"/>
        <Label Content="Number of Tickets" HorizontalAlignment="Left" Margin="458,359,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnBook" Content="Book" HorizontalAlignment="Left" Margin="706,359,0,0" VerticalAlignment="Top" Click="btnBook_Click"/>
        <TextBox x:Name="tbxNumberOfTickets" HorizontalAlignment="Left" Margin="570,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
